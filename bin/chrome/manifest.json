{
    "manifest_version": 2,

    "name": "TW2 tools",
    "description": "Tools for Tribal Wars 2",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png"
    },
    "permissions": ["tabs", "http://*/*"],
    "content_scripts": [{
        "matches": ["https://fr.tribalwars2.com/*"],
        "js": [
            "app.js"
        ]
    }]
}
